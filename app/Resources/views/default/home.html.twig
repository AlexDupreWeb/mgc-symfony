{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                {{ 'mgc.global.administration'|trans({}, "messages", app.request.locale)|capitalize }}
                <small>{{ 'mgc.home.content_manager'|trans({}, "messages", app.request.locale)|capitalize }}</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">{{ 'mgc.global.home'|trans({}, "messages", app.request.locale)|capitalize }}</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-4">
                    <div class="box box-primary">
                        <div class="box-body">
                            <ul class="products-list product-list-in-box">
                                <li class="item">
                                    <div class="product-img">
                                        <img class="img-circle" src="{{ asset('uploads/avatars/_alexandre.png') }}" alt="Product Image">
                                    </div>
                                    <div class="product-info">
                                        <a href="javascript:void(0)" class="product-title">Alexandre</a>
                                        <span class="product-description">BLABLABLA</span>
                                    </div>
                                </li>
                                <li class="item">
                                    <div class="product-img">
                                        <img class="img-circle" src="{{ asset('adminlte/dist/img/icons/icon_help_128x128.png') }}" alt="Product Image">
                                    </div>
                                    <div class="product-info">
                                        <a href="javascript:void(0)" class="product-title">F.A.Q</a>
                                        <span class="product-description">Une question? Nous avons LA r√©ponse!</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">

                        {% for i in 0..3 %}
                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-green">
                                <div class="inner">
                                    <h3>150</h3>

                                    <p>New Orders</p>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-shopping-cart"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    More info <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                </div>
            </div>

            <div class="row">

                {% for shortcut in home_shortcuts %}
                    <div class="col-xs-6 col-sm-4 col-md-2">
                        <div class="thumbnail home-thumbnail">
                            <img src="{{ shortcut.icon }}" alt="{{ shortcut.title }}" />
                            <div class="caption">
                                <a href="{{ shortcut.link }}" class="btn btn-default btn-block" role="button">{{ shortcut.title }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="col-xs-6 col-sm-4 col-md-2">
                    <div class="thumbnail home-thumbnail">
                        <i class="fa fa-pencil"></i>
                        <div class="caption">
                            <a href="#" class="btn btn-default btn-block" role="button">Test</a>
                        </div>
                    </div>
                </div>

            </div>

        </section>
    </div>
{% endblock %}
