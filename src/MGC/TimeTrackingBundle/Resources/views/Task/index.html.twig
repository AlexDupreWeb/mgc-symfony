{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Page Header
                <small>Optional description</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Your Page Content Here -->

            <div class="row">
                <div class="col-md-12">
                    <p>
                        <a class="btn btn-default" href="{{ url('time_tracking') }}">
                            <i class="fa fa-arrow-left"></i> {{ 'mgc.global.return'|trans({}, "messages", app.request.locale)|capitalize }}
                        </a>
                        <a class="btn btn-success" href="{{ url('time_tracking_tasks_add') }}">
                            <i class="fa fa-plus"></i> {{ 'mgc.global.add'|trans({}, "messages", app.request.locale)|capitalize }}
                        </a>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">

                    {% if tasks|length > 0 %}
                        <form>
                            <div class="box box-solid box-black">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Liste des éléments</h3>
                                    <div class="box-tools pull-right">
                                        <a class="btn btn-box-tool" href="{{ url('time_tracking_tasks_add') }}"><i class="fa fa-plus"></i> {{ 'mgc.global.add'|trans({}, "messages", app.request.locale)|capitalize }}</a>
                                        <a class="btn btn-box-tool" data-toggle="popin-help" href="#"><i class="fa fa-question"></i> {{ 'mgc.global.help'|trans({}, "messages", app.request.locale)|capitalize }}</a>
                                    </div>
                                </div>

                                <div class="box-body no-padding">
                                    <table class="table">
                                        <colgroup>
                                            <col width="5%">
                                            <col width="5%">
                                            <col width="40%">
                                            <col width="40%">
                                            <col width="5%">
                                            <col width="2%">
                                            <col width="3%">
                                        </colgroup>
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Date</th>
                                            <th>Nom</th>
                                            <th>Labels</th>
                                            <th>Durée</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {%  for task in tasks %}
                                            <tr>
                                                <td>{{ task.getId() }}</td>
                                                <td><span class="label label-default" data-toggle="tooltip" data-placement="top" title="{{ task.getDate()|date('d/m/Y H:i:s') }}">{{ task.getDate()|date('d/m/Y') }}</span></td>
                                                <td>{{ task.getName() }}</td>
                                                <td>p</td>
                                                <td><span class="badge bg-black">{{ task.getExecutionTime() }}</span></td>
                                                <td>
                                                    <a class="btn btn-link btn-xs" href="{{ url('time_tracking_tasks_edit', { id:task.getId() }) }}">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-link btn-xs" href="{{ url('time_tracking_tasks_delete', { id:task.getId() }) }}">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>

                                {% if pagination is defined and pagination.numberPages > 1 %}
                                    {% set p_urls = pagination.create(2) %}
                                    <div class="box-footer clearfix">
                                        <div class="text-center">
                                            <ul class="pagination pagination-sm no-margin">
                                                {% for p_url in p_urls %}
                                                    <li {% if p_url.class != ''%}class="{{ p_url.class }}"{% endif %}>
                                                        <a href="{{ p_url.url }}">{{ p_url.libelle|raw }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                {% endif %}

                            </div>
                        </form>
                    {% else %}
                        <div class="alert alert-info">
                            <h4><i class="icon fa fa-info"></i> {{ 'mgc.global.information'|trans({}, "messages", app.request.locale)|capitalize }} </h4>
                            {{ 'mgc.error.no_object_to_show'|trans({'%object%': txt_element}, "messages", app.request.locale)|capitalize }}
                        </div>
                    {% endif %}

                </div>
            </div>

            <!-- -->

        </section>
    </div>
{% endblock %}
