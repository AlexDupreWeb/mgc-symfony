<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle" alt="{{ user.fname }}" src="{{ asset('uploads/avatars/_default_man.png') }}">
        <h3 class="profile-username text-center">{{ user.fname }} {{ user.sname }}</h3>
        <p class="text-muted text-center">{{ user.companyjob }}</p>
        <p class="text-center"><a href="mailto:{{ user.email }}">{{ user.email }}</a></p>
        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <b>Compte</b>
                {% if user.active %}
                <span class="pull-right"><span class="label label-success">Activé</span></span>
                {% else %}
                <span class="pull-right"><span class="label label-danger">Désactivé</span></span>
                {% endif %}
            </li>

            <li class="list-group-item">
                <b>Rôle</b>
                {% if false %}
                <a class="pull-right"><span class="label label-warning">Administrateur</span></a>
                {% else %}
                <a class="pull-right"><span class="label label-default">Utilisateur</span></a>
                {% endif %}
            </li>

            <li class="list-group-item">
                <b>Langue</b>
                <span class="pull-right"></span>
            </li>
            <li class="list-group-item">
                <b>Localisation</b>
                <span class="pull-right">Rouen</span>
            </li>

        </ul>
        <a class="btn btn-default btn-block" href="{{ url('admin-mgc-users') }}edit/{{ user.id }}">
            <i class="fa fa-pencil"></i> Modifier
        </a>
        <a class="btn btn-default btn-block" href="{{ url('admin-mgc-users') }}timeline/{{ user.id }}">
            <i class="fa fa-calendar"></i> Historique
        </a>
        <a class="btn btn-default btn-block" href="{{ url('admin-mgc-users') }}stats/{{ user.id }}">
            <i class="fa fa-area-chart"></i> Statistiques
        </a>
        <a class="btn btn-default btn-block" href="{{ url('admin-mgc-users') }}sessions/{{ user.id }}">
            <i class="fa fa-desktop"></i> Appareils
        </a>

    </div>
</div>

