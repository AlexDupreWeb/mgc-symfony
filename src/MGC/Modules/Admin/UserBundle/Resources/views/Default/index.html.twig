{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                <i class="fa fa-star text-yellow"></i> Liste des utilisateurs
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-3">
                    <div class="info-box">
                        <span class="info-box-icon bg-yellow">
                            <i class="fa fa-group"></i>
                        </span>
                        <div class="info-box-content">
                            <span class="info-box-text">Utilisateurs</span>
                            <span class="info-box-number">1,410</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="info-box">
                        <span class="info-box-icon bg-green">
                            <i class="fa fa-toggle-on"></i>
                        </span>
                        <div class="info-box-content">
                            <span class="info-box-text">Actifs</span>
                            <span class="info-box-number">1,410</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="info-box">
                        <span class="info-box-icon bg-red">
                            <i class="fa fa-toggle-off"></i>
                        </span>
                        <div class="info-box-content">
                            <span class="info-box-text">Inactifs</span>
                            <span class="info-box-number">1,410</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="info-box">
                        <span class="info-box-icon bg-gray-light">
                            <i class="fa fa-search"></i>
                        </span>
                        <div class="info-box-content">
                            <span class="info-box-text">Recherche</span>
                            <span class="info-box-number">1,410</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="text-right">
                        <a class="btn btn-success" href="{{ url('admin-mod-user-add') }}"><i class="fa fa-plus"></i> Ajouter</a>
                        <a class="btn btn-default" href="#"><i class="fa fa-question"></i> Aide</a>
                    </p>
                </div>
            </div>


            <!-- Your Page Content Here -->

            <div class="row">
                <div class="col-md-12">
                    {% if true %}
                    <form>
                        <div class="box box-warning">
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <colgroup>
                                        <col width="2%">
                                        <col width="5%">
                                        <col width="5%">
                                        <col width="36%">
                                        <col width="33%">
                                        <col width="6%">
                                        <col width="13%">
                                    </colgroup>
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>#</th>
                                            <th class="text-center"><i class="fa fa-picture-o"></i></th>
                                            <th>Nom - Prénom</th>
                                            <th>Login - Email</th>
                                            <th>Activé</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><input type="checkbox" name="" value=""/></td>
                                            <td colspan="2"><input type="text" class="form-control" name="id" value="" placeholder="id" /></td>
                                            <td><input type="text" class="form-control" name="id" value="" placeholder="nom/prenom" /></td>
                                            <td><input type="text" class="form-control" name="id" value="" placeholder="email" /></td>
                                            <td>
                                                <select class="form-control">
                                                    <option>-</option>
                                                    <option>oui</option>
                                                    <option>non</option>
                                                </select>
                                            </td>
                                            <td><button class="btn btn-default"><i class="fa fa-search"></i> Rechercher</button></td>
                                        </tr>
                                    {% for i in 0..10 %}
                                        <tr>
                                            <td><input type="checkbox" name="" value=""/></td>
                                            <td>{{ i }}</td>
                                            <td><img alt="" src="{{ asset('uploads/avatars/_default_man.png') }}" width="40"></td>
                                            <td>Nom Prenom <br> Job</td>
                                            <td>Login <br> <a href="mailto:Email">Email</a></td>
                                            <td class="text-center">
                                                {% if cycle([true, false], i) %}
                                                <a class="text-green" href="user_active/{{ i }}"><i class="fa fa-check-circle"></i></a>
                                                {% else %}
                                                <a class="text-red" href="user_active/{{ i }}"><i class="fa fa-times-circle"></i></a>
                                                {% endif %}
                                            </td>

                                            <td>
                                                <div class="btn-group">
                                                    <a class="btn btn-default" href="user_edit/{{ i }}"><i class="fa fa-pencil"></i> Modifier</a>
                                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a href="user_edit/{{ i }}"><i class="fa fa-pencil"></i> Modifier</a></li>
                                                        <li><a href="user_permissions/{{ i }}"><i class="fa fa-list-alt"></i> Droits</a></li>
                                                        <li><a href="user_gadgets/{{ i }}"><i class="fa fa-puzzle-piece"></i> Modules</a></li>
                                                        <li><a href="#"><i class="fa fa-lock"></i> Mot de passe</a></li>
                                                        <li class="divider"></li>
                                                        <li><a href="#"><i class="fa fa-trash"></i> Supprimer</a></li>
                                                    </ul>
                                                </div>
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                    {% else %}
                        <div class="alert alert-danger">
                            <h4><i class="icon fa fa-exclamation-circle"></i> Erreur! </h4>
                            Aucun utilisateur pour l'administration.
                        </div>
                    {% endif %}

                </div>
            </div>

        </section>
    </div>
{% endblock %}
