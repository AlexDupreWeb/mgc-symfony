{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Responsive File Manager
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('home') }}"><i class="fa fa-home"></i> {{ 'mgc.global.home'|trans({}, "messages", app.request.locale)|capitalize }}</a></li>
                <li class="active">Responsive File Manager</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary collapsed-box">
                        <div class="box-header">
                            <h3 class="box-title">Responsive File Manager
                                <small>Demo1 - Iframe mode</small>
                            </h3>
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">

                            <iframe width="100%" height="550" frameborder="0" src="{{ asset('responsive_filemanager/filemanager/dialog.php') }}?type=0&lang=fr_FR"> </iframe>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Responsive File Manager
                                <small>Demo2 - Button & Form Mode</small>
                            </h3>
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">

                            <form class="form-horizontal">
                            {% for filemanager in params_for_input_filemanager %}
                                <div class="form-group">
                                    <label for="{{ filemanager.field_id }}" class="col-sm-3 control-label">Responsive File Manager ({{ filemanager.label_comment }})</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="{{ filemanager.field_id }}">
                                            <span class="input-group-btn">
                                                <button type="button" class="btn btn-default btn-flat" data-toggle="modal" data-target="#modal-{{ filemanager.field_id }}"><i class="fa fa-folder-open"></i></button>
                                              </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="modal-{{ filemanager.field_id }}">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">Ã—</span></button>
                                                <h4 class="modal-title">Responsive File Manager {{ filemanager.label_comment }}</h4>
                                            </div>
                                            <div class="modal-body">
                                                <iframe width="100%" height="350" frameborder="0" src="{{ asset('responsive_filemanager/filemanager/dialog.php') }}?type={{ filemanager.type }}&lang={{ filemanager.lang }}&field_id={{ filemanager.field_id }}"> </iframe>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </form>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h3 class="box-title">Responsive File Manager
                                <small>Demo3 - CKEditor</small>
                            </h3>
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <form>
                                <textarea class="ckeditor-default" id="editor0" name="editor0"></textarea>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </div>
{% endblock %}
