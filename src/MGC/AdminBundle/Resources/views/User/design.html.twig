{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Page Header
                <small>Optional description</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-3">
                    {% include "AdminBundle:User:inc/profile.html.twig" %}
                </div>
                <div class="col-md-9">

                    <div class="nav-tabs-custom">
                        {% include "AdminBundle:User:inc/nav.html.twig" %}
                        <div class="tab-content">
                            <div class="tab-pane active">

                                <form role="form">
                                    <br>
                                    <div class="row">
                                        <div class="col-md-9">
                                            <p>Choix du thème: </p>
                                            <div class="row">

                                                {% for name, skin in skins %}
                                                <div class="col-md-2 col-xs-4">
                                                    <a class="clearfix full-opacity-hover" style="margin-bottom: 10px; display: block; box-shadow: 0 0 3px rgba(0,0,0,0.4)" data-skin="{{ name }}" href="javascript:void(0);">
                                                        <div>
                                                            <span style="display:block; width: 20%; float: left; height: 7px; background: {{ skin.bg1 }};"></span>
                                                            <span style="display:block; width: 80%; float: left; height: 7px; background: {{ skin.bg2 }};"></span>
                                                        </div>
                                                        <div>
                                                            <span style="display:block; width: 20%; float: left; height: 45px; background: {{ skin.bg3 }};"></span>
                                                            <span style="display:block; width: 80%; float: left; height: 45px; background: {{ skin.bg4 }};"></span>
                                                        </div>
                                                    </a>
                                                </div>
                                                {% endfor %}

                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <p>Thème sélectionné: </p>
                                            <div class="row">
                                                <div class="col-md-2 col-xs-12"></div>
                                                <div class="col-md-8 col-xs-12">
                                                    <a class="clearfix full-opacity-hover" id="preview-skin" style="margin-bottom: 10px; display: block; box-shadow: 0 0 3px rgba(0,0,0,0.4)" href="javascript:void(0);">
                                                        <div>
                                                            <span style="display:block; width: 20%; float: left; height: 7px; background: {{ user_skin.bg1 }};"></span>
                                                            <span style="display:block; width: 80%; float: left; height: 7px; background: {{ user_skin.bg2 }};"></span>
                                                        </div>
                                                        <div>
                                                            <span style="display:block; width: 20%; float: left; height: 45px; background: {{ user_skin.bg3 }};"></span>
                                                            <span style="display:block; width: 80%; float: left; height: 45px; background: {{ user_skin.bg4 }};"></span>
                                                        </div>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-9">
                                            <p>Choix du fond: </p>
                                            <div class="row">
                                                {% for name, background in backgrounds %}
                                                <div class="col-md-2 col-xs-4">
                                                    <a class="clearfix" style="margin-bottom: 10px; display: block; box-shadow: 0 0 3px rgba(0,0,0,0.4);" data-background="{{ name }}" href="javascript:void(0);">
                                                        <div style="height: 52px; background: url({{ asset(background) }})"></div>
                                                    </a>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <p>Fond sélectionné: </p>
                                            <div class="row">
                                                <div class="col-md-2 col-xs-12"></div>
                                                <div class="col-md-8 col-xs-12">
                                                    <a class="clearfix" id="preview-background" style="margin-bottom: 10px; display: block; box-shadow: 0 0 3px rgba(0,0,0,0.4)" href="javascript:void(0);">
                                                        <div style="height: 52px; background: url({{ asset(user_background) }})"></div>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <p>Choix de l'affichage: </p>
                                            <div class="form-group">
                                                {% for name, layout in layouts %}
                                                <div class="radio">
                                                    <label><input type="radio" name="data-layout" value="{{ name }}" data-layout="{{ name }}" {% if name == user_layout %}checked="checked"{% endif %}> {{ layout }}</label>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>

                                    <hr>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Enregistrer</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </div>
{% endblock %}
